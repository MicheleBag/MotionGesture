<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/header"
        tools:layout_editor_absoluteX="17dp" />

    <TextView
        android:id="@+id/gesture"
        android:layout_width="93dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1"
        android:text="Gesture"
        android:textColor="@color/colorPrimary"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout_shake"
        app:layout_constraintEnd_toStartOf="@+id/action"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/action"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="14dp"
        android:layout_weight="1"
        android:text="Action"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout_shake"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/tutorial_btn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/tutorial_btn_background"
        android:onClick="openTutorial"
        android:text="\?"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/action"
        app:layout_constraintTop_toBottomOf="@+id/header"
        tools:ignore="OnClick" />

    <LinearLayout
        android:id="@+id/linearLayout_shake"
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView_shake"
            android:layout_width="95dp"
            android:layout_height="37dp"
            android:shadowColor="@android:color/darker_gray"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textColor="@color/colorPrimary"
            android:text="@string/shake"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/switch_shake"
            android:layout_width="50dp"
            android:layout_height="31dp" />

        <Spinner
            android:id="@+id/spinner_shake"
            android:layout_width="195dp"
            android:layout_height="43dp"
            android:entries="@array/azioniPossibili"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_flipup"
        android:layout_width="340dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_shake">

        <TextView
            android:id="@+id/textView_flipup"
            android:layout_width="95dp"
            android:layout_height="37dp"
            android:shadowColor="@android:color/darker_gray"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textColor="@color/colorPrimary"
            android:text="@string/flip_up"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/switch_flipup"
            android:layout_width="50dp"
            android:layout_height="31dp" />

        <Spinner
            android:id="@+id/spinner_flipup"
            android:layout_width="195dp"
            android:layout_height="43dp"
            android:entries="@array/azioniPossibili"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_flipdown"
        android:layout_width="340dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_flipup"

        android:gravity="right">

        <TextView
            android:id="@+id/textView_flipdown"
            android:layout_width="95dp"
            android:layout_height="44dp"
            android:shadowColor="@android:color/darker_gray"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textColor="@color/colorPrimary"
            android:text="Flip down"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/switch_flipdown"
            android:layout_width="50dp"
            android:layout_height="31dp" />

        <Spinner
            android:id="@+id/spinner_flipdown"
            android:layout_width="195dp"
            android:layout_height="43dp"
            android:entries="@array/azioniPossibili"
            android:textAlignment="center" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_wristTwist"
        android:layout_width="340dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_flipdown"
        android:gravity="right">

        <TextView
            android:id="@+id/textView_wristTwist"
            android:layout_width="95dp"
            android:layout_height="44dp"
            android:shadowColor="@android:color/darker_gray"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textColor="@color/colorPrimary"
            android:text="Wrist Twist"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/switch_wristTwist"
            android:layout_width="50dp"
            android:layout_height="31dp" />

        <Spinner
            android:id="@+id/spinner_wristTwist"
            android:layout_width="195dp"
            android:layout_height="43dp"
            android:entries="@array/azioniPossibili"
            android:textAlignment="center" />
    </LinearLayout>

