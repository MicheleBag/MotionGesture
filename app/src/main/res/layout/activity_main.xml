    <LinearLayout
        android:id="@+id/linearLayout_wave"
        android:layout_width="340dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_wristTwist"
        android:gravity="right">
        <!-- rimettere proximity layouy, in caso lo riaggiungessi, come ancoraggio bottom-->
        <TextView
            android:id="@+id/textView_wave"
            android:layout_width="95dp"
            android:layout_height="44dp"
            android:layout_weight="0"
            android:shadowColor="@android:color/darker_gray"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textColor="@color/colorPrimary"
            android:text="Hand Wave"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/switch_wave"
            android:layout_width="50dp"
            android:layout_height="31dp" />

        <Spinner
            android:id="@+id/spinner_wave"
            android:layout_width="195dp"
            android:layout_height="43dp"
            android:entries="@array/azioniPossibili"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_pickup"
        android:layout_width="340dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_wave"
        android:gravity="right">

        <TextView
            android:id="@+id/textView_pickup"
            android:layout_width="95dp"
            android:layout_height="44dp"
            android:layout_weight="0"
            android:shadowColor="@android:color/darker_gray"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textColor="@color/colorPrimary"
            android:text="Pick up device"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/switch_pickup"
            android:layout_width="50dp"
            android:layout_height="31dp" />

        <Spinner
            android:id="@+id/spinner_pickup"
            android:layout_width="195dp"
            android:layout_height="43dp"
            android:entries="@array/azioniPossibili"
            android:textAlignment="center" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>

